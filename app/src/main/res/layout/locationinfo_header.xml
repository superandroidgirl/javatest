<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#FFF">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="226dp"
            android:id="@+id/info_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="w,1.87:1"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/info_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/info_img" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"
            android:textSize="14sp"
            android:textColor="#000"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/memo_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/info_text"
            app:layout_constraintStart_toStartOf="@+id/info_text" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:textSize="14sp"
            android:textColor="#000"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/category_text"
            app:layout_constraintTop_toBottomOf="@+id/memo_text"
            app:layout_constraintStart_toStartOf="@+id/memo_text"
            android:textSize="14sp"
            android:textColor="#000" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/open_in_webview" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="在網頁開啟"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/open_in_webview"
            app:layout_constraintTop_toBottomOf="@+id/memo_text" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/category_text" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="#00BBFF"
            android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>