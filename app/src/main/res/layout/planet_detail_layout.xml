<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lastupdate_time"
                style="@style/PlanetDetailStyle"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/planet_funtion_text"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/lastupdate"
        />
        <TextView
                android:text="最後更新："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lastupdate"
                style="@style/PlanetDetailStyle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/planet_funtion_text"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:text="功能性"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/planet_funtion"
                style="@style/PlanetDetailStyle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/planet_feature_text"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/planet_funtion_text"
                style="@style/PlanetDetailStyle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/planet_funtion" android:layout_marginTop="4dp"/>
        <TextView
                android:text="辨認方式"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/planet_feature"
                style="@style/PlanetDetailStyle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/planet_brief_text"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/planet_feature_text"
                style="@style/PlanetDetailStyle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.003"
                android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/planet_feature"/>
        <TextView
                android:text="簡介"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/planet_brief"
                style="@style/PlanetDetailStyle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/also_known_text"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/planet_brief_text"
                style="@style/PlanetDetailStyle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/planet_brief"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="226dp"
                android:id="@+id/planet_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:scaleType="fitXY"
                app:layout_constraintDimensionRatio="w,1.87:1"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/planet_name"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/planet_img" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/planet_en_name" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/planet_name"
                app:layout_constraintStart_toStartOf="@+id/planet_name" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
                style="@style/PlanetDetailStyle"/>
        <TextView
                android:text="別名"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/also_known"
                style="@style/PlanetDetailStyle"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/planet_en_name" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/PlanetDetailStyle"
                android:id="@+id/also_known_text" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/also_known" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>