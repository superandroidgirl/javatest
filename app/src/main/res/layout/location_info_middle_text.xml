<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#FFF">

    <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/view3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/category_text"
            android:background="#DDDDDD"
    />
    <TextView
            android:text="植物資料"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/planet_title"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.043"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/view3"/>

</android.support.constraint.ConstraintLayout>